<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_rounded_key"
    >

    <android.inputmethodservice.KeyboardView
        android:id="@android:id/keyboardView"

        android:background="@drawable/bg_rounded_key"
        android:shadowRadius="0"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyPreviewOffset="12dp"
        android:keyPreviewLayout="@layout/kbpreview"

        android:shadowColor="#ff0dffe6"
        android:keyBackground="@drawable/bg_rounded_key"
        android:keyTextColor="@color/key_background"
        android:paddingBottom="5dp"
        android:keyTextSize="22sp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>